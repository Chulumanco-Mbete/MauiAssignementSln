            <ImageButton Source="video_12.jpg" HorizontalOptions="CenterAndExpand" HeightRequest="550" Aspect="AspectFill" Clicked="Video_12_Button_Clicked"/>
            <ImageButton Source="video_13.jpg" HorizontalOptions="CenterAndExpand" HeightRequest="550" Aspect="AspectFill" Clicked="Video_13_Button_Clicked"/>
