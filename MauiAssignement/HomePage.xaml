<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAssignement.HomePage">

    <ScrollView>
        <VerticalStackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Spacing="500">
                <Image Source="youtube_logo.png" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="120" HeightRequest="120" Aspect="AspectFit" />
                <ImageButton Source="search.png" HorizontalOptions="End" VerticalOptions="Start" WidthRequest="35" HeightRequest="35" Aspect="AspectFit" StyleId="SearchPage" Clicked="OnImageButtonClicked" />
                <ImageButton Source="musical_bell_outline.png" HorizontalOptions="End" VerticalOptions="Start" WidthRequest="35" HeightRequest="35" Aspect="AspectFit" StyleId="SearchPage" Clicked="OnImageButtonClicked" />
            </StackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>