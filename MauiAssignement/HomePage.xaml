            <ImageButton Source="video_5.jpg" HorizontalOptions="CenterAndExpand" HeightRequest="550" Aspect="AspectFill" Clicked="Video_5_Button_Clicked"/>
            <ImageButton Source="video_8.jpg" HorizontalOptions="CenterAndExpand" HeightRequest="550" Aspect="AspectFill" Clicked="Video_8_Button_Clicked"/>
